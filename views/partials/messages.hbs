{{#if errors}}
  {{#each errors}}
    <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
      {{{this.message}}}
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">×</span>
      </button>
    </div>
  {{/each}}
{{/if}}

